extends ../../layout.pug
block contenido
	h1
		|	Subir nueva imagen
	form(action="/app/imagenes", method="POST", enctype="multipart/form-data")
		label(for="title")
			|	Título
		input(type="text", name="title", placeholder="Título de la imagen...", id="title")
		label(for="archivo")
			|	Imagen
		input(type="file", name="archivo", id="archivo")
		input(type="submit", value="Crear imagen")